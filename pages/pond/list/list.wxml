<!--pages/pond/list/list.wxml-->
<view class="container">
  <scroll-view class="scroll-view" type="list" scroll-y>
    <block wx:if="{{ list.length > 0 }}">
      <block wx:for="{{ list }}" wx:key="index">
        <van-swipe-cell async-close right-width="{{ 65 }}" data-id="{{ item.id }}" bind:close="handleClose">
          <van-cell title="{{ item.name }}">
            <van-button slot="right-icon" size="small" type="primary" plain data-id="{{ item.id }}" bind:tap="goPage">放鱼计划</van-button>
          </van-cell>
          <van-button slot="right" type="danger">删除</van-button>
        </van-swipe-cell>
      </block>
    </block>
    <van-empty wx:else description="暂无数据" />
  </scroll-view>

  <view class="operate-btn" wx:if="{{ isOnline }}">
    <van-button type="primary" block bind:click="goPage">新增</van-button>
  </view>
</view>