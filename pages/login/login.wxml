<view class="form-box">
  <view class="form-item">
    <input class="username" value="{{ user_name }}" data-field="user_name" bind:input="bindInput" placeholder="用户名" auto-focus />
  </view>
  <view class="form-item">
    <input class="password" value="{{ password }}" password data-field="password" bind:input="bindInput" placeholder="密码" />
  </view>
  <button type="primary" class="form-btn" bind:tap="login">登录</button>
  <button class="form-btn" bind:tap="goPage">注册</button>
</view>