<!--pages/species/add/add.wxml-->
<view class="container">
  <van-cell-group>
    <block wx:for="{{ fields }}" wx:key="index">
      <van-field value="{{ form[item.key] }}" data-field="{{ item.key }}" bind:change="handleChange" clearable placeholder="请输入鱼种名称" />
    </block>
  </van-cell-group>

  <view class="add-btn">
    <van-button type="primary" bind:click="addField">添加</van-button>
  </view>

  <view class="operate-btn">
    <van-button type="primary" block bind:click="handleSave">保存</van-button>
  </view>
</view>